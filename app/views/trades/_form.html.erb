<%= form_with(model: trade) do |form| %>
  <% if trade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(trade.errors.count, "error") %> prohibited this trade from being saved:</h2>

      <ul>
        <% trade.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :base_experience_difference %>
    <%= form.number_field :base_experience_difference %>
  </div>

  <fieldset>
    <legend>Pokemons:</legend>
    <%= form.fields_for :pokemons do |pokemons_form| %>
        <%= render "pokemon_fields", f: pokemons_form %>
    <% end %>
    <%= link_to_add_fields "Add", form, :pokemons %>
  </fieldset>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
